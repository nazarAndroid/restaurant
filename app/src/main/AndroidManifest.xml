<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kilaserto.restaurantapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".db.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RestaurantApp">
        <activity android:name=".ui.login.LoginActivity"></activity>
        <activity android:name=".ui.payment.PaymentActivity" />
        <activity android:name=".ui.basket.BasketActivity" />
        <activity android:name=".ui.dishcard.DishDetailActivity" />
        <activity
            android:name=".ui.home.HomeActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>